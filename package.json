{
  "name": "lezzetatlasi",
  "version": "1.0.0",
  "description": "Lezzet Atlası - Restaurant Review Platform",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=html lcov text",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:verbose": "jest --verbose",
    "test:gurmescore": "jest tests/unit/algorithms/gurmescore.test.js",
    "test:ranking": "jest tests/unit/algorithms/ranking.test.js",
    "test:abuse": "jest tests/unit/security/abuse-prevention.test.js",
    "test:invite": "jest tests/integration/workflows/invite-flow.test.js",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\""
  },
  "keywords": [
    "restaurant",
    "review",
    "food",
    "rating",
    "turkish"
  ],
  "author": "Lezzet Atlası Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "joi": "^17.9.2",
    "dotenv": "^16.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/helpers/test-setup.js"
    ],
    "testTimeout": 10000,
    "verbose": true
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}