<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Colors -->
    <Color x:Key="Primary">#E74C3C</Color>
    <Color x:Key="PrimaryDark">#C0392B</Color>
    <Color x:Key="PrimaryLight">#F1948A</Color>

    <!-- Secondary Colors -->
    <Color x:Key="Secondary">#3498DB</Color>
    <Color x:Key="SecondaryDark">#2874A6</Color>
    <Color x:Key="SecondaryLight">#85C1E9</Color>

    <!-- Accent Colors -->
    <Color x:Key="Accent">#F39C12</Color>
    <Color x:Key="Success">#27AE60</Color>
    <Color x:Key="Warning">#F39C12</Color>
    <Color x:Key="Danger">#E74C3C</Color>
    <Color x:Key="Info">#3498DB</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#212121</Color>
    <Color x:Key="TextSecondary">#757575</Color>
    <Color x:Key="TextLight">#BDBDBD</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F5F5F5</Color>
    <Color x:Key="BackgroundTertiary">#EEEEEE</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="DividerColor">#BDBDBD</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray900">#212121</Color>

    <!-- System Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    
</ResourceDictionary>
