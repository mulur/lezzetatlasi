<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LezzetAtlasi.ViewModels"
             x:Class="LezzetAtlasi.Views.ProfilePage"
             x:DataType="vm:ProfileViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Profile Header -->
            <Frame Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Image Source="{Binding CurrentUser.ProfileImageUrl}" 
                           HeightRequest="100" WidthRequest="100"
                           Aspect="AspectFill">
                        <Image.Clip>
                            <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50" />
                        </Image.Clip>
                    </Image>
                    
                    <Label Text="{Binding CurrentUser.FirstName}" 
                           FontSize="24" FontAttributes="Bold" 
                           HorizontalTextAlignment="Center" />
                    
                    <Label Text="{Binding CurrentUser.Email}" 
                           HorizontalTextAlignment="Center" TextColor="Gray" />

                    <!-- Stats -->
                    <Grid ColumnDefinitions="*,*" Padding="0,20,0,0" ColumnSpacing="20">
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="{Binding TotalReviews}" 
                                   FontSize="20" FontAttributes="Bold" 
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Yorum" HorizontalTextAlignment="Center" TextColor="Gray" />
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="{Binding TotalFavorites}" 
                                   FontSize="20" FontAttributes="Bold" 
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Favori" HorizontalTextAlignment="Center" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Grid>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Button Text="Profili Düzenle" Command="{Binding EditProfileCommand}" />
                        <Button Text="Ayarlar" Command="{Binding NavigateToSettingsCommand}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- My Reviews Section -->
            <Label Text="Yorumlarım" FontSize="20" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding UserReviews}"
                           SelectionMode="Single"
                           SelectionChangedCommand="{Binding ViewReviewCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" Margin="0,5">
                            <Grid ColumnDefinitions="80,*" RowDefinitions="Auto,Auto,Auto">
                                <Image Grid.RowSpan="3" Source="placeholder.png" 
                                       WidthRequest="80" HeightRequest="80" />
                                <Label Grid.Column="1" Text="{Binding PlaceId}" FontAttributes="Bold" />
                                <HorizontalStackLayout Grid.Column="1" Grid.Row="1" Spacing="5">
                                    <Label Text="★" TextColor="Gold" />
                                    <Label Text="{Binding Rating}" />
                                </HorizontalStackLayout>
                                <Label Grid.Column="1" Grid.Row="2" 
                                       Text="{Binding CreatedAt, StringFormat='{0:dd.MM.yyyy}'}" 
                                       FontSize="12" TextColor="Gray" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Favorite Places Section -->
            <Label Text="Favori Mekanlarım" FontSize="20" FontAttributes="Bold" Margin="0,20,0,0" />
            <CollectionView ItemsSource="{Binding FavoritePlaces}"
                           SelectionMode="Single"
                           SelectionChangedCommand="{Binding ViewFavoritePlaceCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,5">
                            <Grid ColumnDefinitions="80,*">
                                <Image Source="placeholder.png" WidthRequest="80" HeightRequest="80" />
                                <VerticalStackLayout Grid.Column="1" Padding="10,0" Spacing="5">
                                    <Label Text="{Binding Name}" FontAttributes="Bold" />
                                    <Label Text="{Binding Address}" FontSize="12" TextColor="Gray" />
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="★" TextColor="Gold" />
                                        <Label Text="{Binding AverageRating}" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Logout Button -->
            <Button Text="Çıkış Yap" Command="{Binding LogoutCommand}" 
                    BackgroundColor="Transparent" TextColor="Red" 
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
